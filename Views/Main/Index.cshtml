<div>
    <form method="post" style="text-align:center">
        <input type="hidden" type="text" name="form_name" value="search_form" />
        <input style="width:800px" type="text" name="search_by_recipe_name" placeholder="Enter Recipe Name..." />
        <button type="submit" class="btn-primary" name="search_by_job_btn">Search</button>
    </form>
    <br />
    <div class="row">
        <div class="col xl-4 d-flex justify-content-center align-items-center">
            <form method="post">
                <input type="hidden" type="text" name="form_name" value="cusine_search_form" />
                <label for="cusine">Cusine:</label>

                <select name="cusine" id="cusine">
                    <option value="american">American</option>
                    <option value="indian">Indian</option>
                    <option value="french">French</option>
                    <option value="thai">Thai</option>
                </select>  <button type="submit" class="btn-primary" name="search_by_salary_btn">Apply</button>
            </form>
        </div>

        <div class="col xl-3 d-flex justify-content-center align-items-center">
            <form asp-action="Index">
                <input type="hidden" value="category_search_form" name="form_name" />
                <input type="radio" value="veg" name="category" />
                <label>Veg</label>
                <input type="radio" value="non veg" name="category" />
                <label>Non Veg</label>
                <button type="submit" class="btn-primary" style="margin-left:5px">Apply</button>
            </form>
        </div>
        <div class="col xl-3 d-flex justify-content-center align-items-center">
            <form asp-action="Index">
                <input type="hidden" value="difficulty_search_form" name="form_name" />
                <input type="radio" value="easy" name="difficulty" />
                <label>Easy</label>
                <input type="radio" value="medium" name="difficulty" />
                <label>Medium</label>
                <input type="radio" value="hard" name="difficulty" />
                <label>Hard</label>
                <button type="submit" class="btn-primary" style="margin-left:5px">Apply</button>
            </form>
        </div>
        <div class="col xl-1 d-flex justify-content-center align-items-center">
            <form asp-action="Index">
                <input type="hidden" value="reset_form" name="form_name" />
                
                <button type="submit" class="btn-primary">Reset Filters</button>
            </form>
        </div>
    </div>
    <br />
</div>

<div class="row">
@foreach (var item in Model)
{
        <div class="card" style="width: 20rem; margin-right:30px">
            <img src=@item.image_url class="card-img-top" alt="..." style="width:250px;display:block;margin:auto;height:200px">
            <div class="card-body">
                <h5 class="card-title">
                    @item.title
                    @if (@item.category.Equals("Non Veg"))
                    {
                        <span class="badge bg-danger">@item.category</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@item.category</span>
                    }
                    <span class="badge bg-dark">@item.difficulty_level</span>
                </h5>
                <p class="card-text">@item.description.Substring(0,100)...</p>
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.recipe_id">View Details</a>
            </div>
        </div>
    
}

</div>
